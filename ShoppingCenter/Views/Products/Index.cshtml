@{
}
@model IEnumerable<Product>

<h1>Products Page</h1>
<hr />
<div>
    <div class="box">
        <a asp-controller="Products" asp-action="Add" class="create-btn">Add<i class="bi bi-bag-plus" style="margin-left: 10px;"></i></a>
    </div>
    <br />
    <table class="products-table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Cost
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Brand
                </th>
                <th>
                    Category
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td>@p.Cost</td>
                        <td>@p.Amount</td>
                        <td>@p.Brand</td>
                        <td>@p.Category</td>
                        <td><a class="in-table-btn" asp-controller="Products" asp-action="Edit" asp-route-id="@p.Id"><i class="bi bi-pencil-square"></i>Edit</a></td>
                        <td><a class="in-table-btn" asp-controller="Products" asp-action="Delete" asp-route-id="@p.Id" style="color: rgb(153, 35, 29);"><i class="bi bi-trash"></i>Delete</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
